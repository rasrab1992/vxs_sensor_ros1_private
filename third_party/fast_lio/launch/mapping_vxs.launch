<launch>
    <arg name="rviz" default="true" />
    
    <rosparam command="load" file="$(find fast_lio)/config/voxelsensors.yaml" />
    
    <param name="feature_extract_enable" type="bool" value="0"/>
    <param name="point_filter_num" type="int" value="1"/> <!-- Less filtering for sparse data -->
    <param name="max_iteration" type="int" value="3" />
    <param name="filter_size_surf" type="double" value="0.05" /> <!-- Smaller voxel size 0.05 -->
    <param name="filter_size_map" type="double" value="0.1" />
    <param name="cube_side_length" type="double" value="10" /> <!-- Smaller map for indoor -->
    <param name="runtime_pos_log_enable" type="bool" value="0" />
    

    <!-- Disable IMU fusion and deskewing while testing -->
    <!-- <param name="imu_en" type="int" value="0"/>
    <param name="undistortion_en" type="int" value="0"/> -->

    <node pkg="fast_lio" type="fastlio_mapping" name="laserMapping" output="screen" />
    
    <!-- Bridge node to republish VXS data if needed -->
    <!-- <node pkg="your_package" type="vxs_to_fastlio_bridge" name="vxs_bridge" /> -->
    
    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" 
              args="-d $(find fast_lio)/rviz_cfg/loam_livox.rviz" />
    </group>
</launch>
